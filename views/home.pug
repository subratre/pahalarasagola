doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{title}
        script(src="https://kit.fontawesome.com/4a3b1f73a2.js")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Lato&display=swap")
        link(rel="stylesheet", href="/css/header.css")
        script(src="js/jQuery3.4.1.js")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.css")
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick-theme.min.css")
        style. 
            body
            {
                margin: 0;
            }
            #containerSlider
            {
                margin: auto;
                width: 90%;
                text-align: center;
                padding-top: 100px;
                box-sizing: border-box;
            }
            #containerSlider img
            {
                width: 100%;
                height: 140%;
                text-align: center;
                align-content: center;
            }
            @media(max-width: 732px)
            {
                #containerSlider img
                {
                    height: 12em;
                }
            }
            @media(max-width: 500px)
            {
                #containerSlider img
                {
                    height: 10em;
                }
            }
    body
        header
            section
                // MAIN CONTAINER
                #container
                    // SHOP NAME
                    #shopName
                        a(href='index.html')
                        b SHOP
                        | LANE
                    // COLLCETIONS ON WEBSITE
                    #collection
                        #clothing
                        a(href='clothing.html')  CLOTHING 
                        #accessories
                        a(href='accessories.html')  ACCESSORIES 
                    // SEARCH SECTION
                    #search
                        i.fas.fa-search.search(aria-hidden='true')
                        input#input(type='text' name='searchBox' placeholder='Search for Clothing and Accessories')
                    // USER SECTION (CART AND USER ICON)
                    #user
                        a(href='cart.html')
                        i.fas.fa-shopping-cart.addedToCart(aria-hidden='true')
                            #badge  0 
                        a(href='#')
                        i.fas.fa-user-circle.userIcon(aria-hidden='true')
        section
            #containerSlider
                #slidingImage
                    img(src='/img/img1.png' alt='image1')
                #slidingImage
                    img(src='/img/img2.png' alt='image2')
                #slidingImage
                    img(src='/img/img3.png' alt='image3')
                #slidingImage
                    img(src='/img/img4.png' alt='image4')

        script(src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.9.0/slick.min.js")
        script. 
            $(document).ready(function() {
                   $('#containerSlider').slick({
                        dots: true,
                        infinite: true,
                        slidesToShow: 1,
                        slidesToScroll: 1,
                        autoplay: true,
                        autoplaySpeed: 1500,
                        });
            })